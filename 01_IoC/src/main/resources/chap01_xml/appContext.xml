<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="add" class="org.shark.ioc.chap01_xml.Adder" />
    <bean id="sub" class="org.shark.ioc.chap01_xml.Subtractor" />
    <bean id="mul" class="org.shark.ioc.chap01_xml.Multiplier" />
    <bean id="div" class="org.shark.ioc.chap01_xml.Divider" />


    <bean id="calc1" class="org.shark.ioc.chap01_xml.Calculator">
        <property name="brand" value="샤프"/>
        <property name="price" value="10000"/>
        <property name="adder" ref="add"/>
        <property name="subtractor" ref="sub"/>
        <property name="multiplier" ref="mul"/>
        <property name="divider" ref="div"/>
    </bean>

    <bean id="calc2" class="org.shark.ioc.chap01_xml.Calculator">
        <constructor-arg value="필립스"/>
        <constructor-arg value="20000"/>
        <constructor-arg ref="add"/>
        <constructor-arg ref="sub"/>
        <constructor-arg ref="mul"/>
        <constructor-arg ref="div"/>
    </bean>






</beans>
